{
  "name": "automation-platform-backend",
  "version": "1.0.0",
  "description": "Backend microservices for the Automation Platform",
  "private": true,
  "workspaces": [
    "auth-service",
    "workflow-service",
    "integration-service",
    "ai-service",
    "analytics-service",
    "notification-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:workflow\" \"npm run dev:integration\" \"npm run dev:ai\" \"npm run dev:analytics\" \"npm run dev:notification\"",
    "dev:auth": "cd auth-service && npm run dev",
    "dev:workflow": "cd workflow-service && npm run dev",
    "dev:integration": "cd integration-service && npm run dev",
    "dev:ai": "cd ai-service && npm run dev",
    "dev:analytics": "cd analytics-service && npm run dev",
    "dev:notification": "cd notification-service && npm run dev",
    "build": "npm run build:auth && npm run build:workflow && npm run build:integration && npm run build:ai && npm run build:analytics && npm run build:notification",
    "build:auth": "cd auth-service && npm run build",
    "build:workflow": "cd workflow-service && npm run build",
    "build:integration": "cd integration-service && npm run build",
    "build:ai": "cd ai-service && npm run build",
    "build:analytics": "cd analytics-service && npm run build",
    "build:notification": "cd notification-service && npm run build",
    "test": "npm run test:auth && npm run test:workflow && npm run test:integration && npm run test:ai && npm run test:analytics && npm run test:notification",
    "test:auth": "cd auth-service && npm test",
    "test:workflow": "cd workflow-service && npm test",
    "test:integration": "cd integration-service && npm test",
    "test:ai": "cd ai-service && npm test",
    "test:analytics": "cd analytics-service && npm test",
    "test:notification": "cd notification-service && npm test",
    "db:migrate": "cd auth-service && npm run db:migrate",
    "db:seed": "cd auth-service && npm run db:seed",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "automation",
    "workflow",
    "microservices",
    "nodejs",
    "typescript",
    "nestjs",
    "postgresql",
    "redis"
  ],
  "author": "Automation Platform Team",
  "license": "MIT"
} 